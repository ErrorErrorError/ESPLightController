<?xml version="1.0" encoding="UTF-8"?>
<resources>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:translationY">-1dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceMediumComponent</item>
    </style>

    <!-- InputTextLayout -->
    <style name="Widget.InputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/TextInputEditText.Theme</item>
        <item name="errorTextColor">?attr/colorError</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.SmallComponent</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputEditText.Theme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/TextInputEditText.Style</item>
    </style>

    <style name="TextInputEditText.Style" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:elevation">10dp</item>
        <item name="android:spotShadowAlpha">0.01</item>
    </style>

    <style name="Widget.InputTextLayout.ExposedDropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/AutocompleteTextView.Theme</item>
        <item name="errorTextColor">?attr/colorError</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.SmallComponent</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AutocompleteTextView.Theme" parent="ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="autoCompleteTextViewStyle">@style/AutocompleteTextView.Style</item>
    </style>

    <style name="AutocompleteTextView.Style" parent="Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="android:elevation">10dp</item>
        <item name="android:spotShadowAlpha">0.01</item>
    </style>

    <style name="DeviceCards" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/AppShapeAppearance.MediumComponent</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/background</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">?attr/textIconColorSync</item>
        <item name="titleTextAppearance">@style/TextAppearance.MyTheme.ToolbarTitle</item>
        <item name="subtitleTextColor">@color/colorOnSurfaceSubtitle</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="CircularMaterialButtonIcon" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:checkable">true</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">50dp</item>
    </style>

</resources>
