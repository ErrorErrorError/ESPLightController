<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
<!--        android:background="@color/colorBackground"-->

        <include
            android:id="@+id/includeLayout"
            layout="@layout/toolbar_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.errorerrorerror.esplightcontroller.views.ToggleGroup
            android:id="@+id/toggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/includeLayout"
            app:layout_constraintVertical_bias="0.050">

            <ToggleButton
                android:id="@+id/modeButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/modes_button_drawable"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/brightnessButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/brightness_button_drawable"
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/timerButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/timer_button_drawable"
                android:textOff=""
                android:textOn="" />

        </com.errorerrorerror.esplightcontroller.views.ToggleGroup>

        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/powerButton"
            app:layout_constraintTop_toBottomOf="@+id/toggleGroup"
            android:orientation="vertical">

        </LinearLayout>


        <ToggleButton
            android:id="@+id/powerButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/power_button_drawable"
            android:textOff=""
            android:textOn=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.96" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>